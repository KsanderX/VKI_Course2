<Window x:Class="Lab5.DataGridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="DataGridWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Center" Width="578" AutoGenerateColumns="True" Margin="0,31,0,31"
                  ItemsSource="{Binding }">

        </DataGrid>
        <Button Click="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="19,21,0,0" VerticalAlignment="Top" Height="33" Width="69"/>
    </Grid>
</Window>
