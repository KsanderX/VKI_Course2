<UserControl x:Class="Lab5.MaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Background="AliceBlue" Content="Id"></Label>
            <TextBox x:Name="tbId" HorizontalAlignment="Center" Text="{Binding Id}"  Width="200" Height="30"/>
            <Label Background="AliceBlue" Content="Name"></Label>
            <TextBox  Text="{Binding Name}"  Width="200" Height="30" />
            <Button Content="Продукты данного материала" Height="30" Click="btnOpenWindowWithProducts"></Button>
            
        </StackPanel>
    </Grid>
</UserControl>
