<Window x:Class="Lab6.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="50">
            <Label Content="Login" VerticalAlignment="Top" Background="Aqua"/>
            <TextBox HorizontalAlignment="Left" x:Name="tbLogin" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
            <Label Content="Password" VerticalAlignment="Top" Background="Aqua"/>
            <TextBox HorizontalAlignment="Left" x:Name="tbPassword"  TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
            <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
