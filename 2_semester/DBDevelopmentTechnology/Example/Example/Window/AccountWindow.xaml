<Window x:Class="Example.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="AccountWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <Label Content="Заказы пользователя" FontSize="20" HorizontalAlignment="Center"/>
            <ListView  x:Name="clientIndents" Height="178" Width="350" SelectedValuePath="Id" DisplayMemberPath="Name"
           SelectedItem="{Binding SelectedIndent}"/>
            <Label Content="Введите ID Заказа" FontSize="16" Width="300"/>
            <TextBox  Height="30" FontSize="14" x:Name="tbSelectedId" Width="300" />
            <Button Content="Поиск" Height="30" Margin="10" x:Name="btnFindIndexById"
                   Width="300" Click="btnFindIndexById_Click"/>
        </StackPanel>
       
        <StackPanel Grid.Column="1">

            <Label Content="Информация о заказе" FontSize="20" HorizontalAlignment="Center"/>
            <Label Content="Имя Клиента" FontSize="16"/>
            <TextBox  Height="30" FontSize="14" Text="{Binding SelectedIndent.Client.Login}" IsReadOnly="True"/>
           
            <Label Content="Id Заказа" FontSize="16"/>
            <TextBox  Height="30" FontSize="14" Text="{Binding SelectedIndent.Id}" 
                      IsReadOnly="True"/>
            
            <Label Content="Имя заказа:" FontSize="16"/>
            <TextBox Height="30" FontSize="14" Text="{Binding SelectedIndent.Name}" IsReadOnly="True"/>
            <Label Content="Цена заказа" FontSize="16"/>
            <TextBox   Height="30" FontSize="14" Text="{Binding SelectedIndent.Price}" IsReadOnly="True"/>
            <Label Content="Имя продукта" FontSize="16"/>
            <TextBox  Height="30" FontSize="14" Text="{Binding SelectedIndent.Product.Name}" IsReadOnly="True"/>
           
        </StackPanel>
    </Grid>
</Window>
