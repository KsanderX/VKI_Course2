<Window x:Class="Tkachev_KR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tkachev_KR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Width="300" Height="250">
            <Label Content="Авторизация" FontSize="25" HorizontalAlignment="Center"/>
            <Label Content="Email" FontSize="18"/>
            <TextBox Text="Login1@gmail.com" FontSize="18" x:Name="tbLogin"/>
            <Label Content="Пароль" FontSize="18"/>
            <TextBox Text="qwerty" FontSize="18" x:Name="tbPassword"/>
            <Button Content="Войти" FontSize="18" Click="btnAuth_Click" Margin="0 5 0 5"/>
        </StackPanel>
    </Grid>
</Window>
