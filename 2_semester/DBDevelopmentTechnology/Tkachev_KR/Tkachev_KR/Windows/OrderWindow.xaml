<Window x:Class="Tkachev_KR.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tkachev_KR.Windows"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <Label Content="Заказы пользователя" FontSize="20" HorizontalAlignment="Center"/>
            <ListView  x:Name="clientIndents" Height="178" Width="350" SelectedValuePath="Id" DisplayMemberPath="Name"
    SelectedItem="{Binding SelectedIndent}"/>
            <Label Content="Введите ID Заказа" FontSize="16" Width="300"/>
            <TextBox  Height="30" FontSize="14" x:Name="tbSelectedId" Width="300" />
            <Button Content="Поиск" Height="30" Margin="10" x:Name="btnFindIndexById"
            Width="300" Click="btnFindIndexById_Click"/>
        </StackPanel>
    </Grid>
</Window>
